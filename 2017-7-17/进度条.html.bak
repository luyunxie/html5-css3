<!doctype html>
<html>
     <head>
	       <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>

		   <title>进度条</title>
		   <meta name="keywords" content=""/>
		   <meta name="description" content=""/>

		   <style type="text/css">
		        *{margin:0;padding:0;}

				.box{
				    width:120px;
					height:120px;
					border-radius:50%;
					border:15px solid rgba(0,0,0,.35);
					border-top:15px solid linear-gradient(rgba(0,0,0,.3) rgba(0,0,0,.6));
					margin:80px auto;
					animation:run .5s 1s linear infinite normal;
				}

				@keyframes run{
				      from{
					      transform:rotate(0deg);
					  }
				      to{
					      transform:rotate(360deg);
					  }
				}
		   </style>
	 </head>
	 <body>
	      <div class="box"></div>
	 </body>
</html>