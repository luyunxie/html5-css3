<!doctype html>
<html>
     <head>
	       <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>

		   <meta name="keywords" content=""/>
		   <meta name="description" content=""/>

		   <style type="text/css">
		        *{margin:0;padding:0}

				ul li{height:30px;margin:0 auto;margin-bottom:10px;width:70%;text-align:center;list-style:none;border-radius:5px;line-height:30px;}
				ul li:nth-child(3){background:yellow;}
				ul li:first-child{background:red;}
				ul li:last-child{background:green;}

				ul.nav{margin:20px auto;margin-left:calc(50%-50px);}
				ul.nav:after{content:'';display:block;clear:both;}
				ul.nav li{float:left;width:20px;height:20px;text-align:center;line-height:20px;background:#666;margin-right:10px;}
				ul.nav li.new~li{background:green;}
		   </style>
	 </head>
	 <body>
	       <ul>
		       <li>1</li>
		       <li>2</li>
		       <li>3</li>
		       <li>4</li>
		       <li>5</li>
		       <li>6</li>
		       <li>7</li>
		   </ul>
		   <ul class="nav">
		       <li>1</li>
		       <li>2</li>
		       <li>3</li>
		       <li>4</li>
		       <li class="new">5</li>
		       <li>6</li>
		       <li>7</li>
		       <li>8</li>
		   </ul>
	 </body>
</html>